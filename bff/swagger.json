{
    "swagger": "2.0",
    "info": {
        "title": "Dealstream APIs", 
        "version": "1.0.0"
    },
    "paths": {
        "/api/opportunity-list": {
            "get": {
                "summary": "Get the list of all opportunities",
                "parameters": [
                    {
                        "name": "X-API-Key",
                        "in": "header",
                        "type": "string",
                        "description": "X - API key"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get the list of all opportunities",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "opportunity": {
                                        "type": "string"
                                    },
                                    "account_name": {
                                        "type": "string"
                                    },
                                    "contact": {
                                        "type": "string"  
                                    },
                                    "conversion_probability": {
                                        "type": "number"
                                    },
                                    "created_date": {
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "deal_stage": {
                                        "type": "string"
                                    },
                                    "enagagement_score": {
                                        "type": "number"
                                    },
                                    "last_action": {
                                        "type": "string"
                                    },
                                    "last_active": {
                                        "type": "string"  
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "schema": {
                            "$ref": "#/definitions/ErrorResponse"
                        }
                    }
                }
            }
        },
        "/api/get-meeting-description": {
            "get": {
              "summary": "Get a meeting description generated by openai model",
              "parameters": [
                {
                    "name": "X-API-Key",
                    "in": "header",
                    "type": "string",
                    "description": "API key required for authentication"
                },
                {
                  "name": "meeting_type",
                  "in": "query",
                  "type": "string",
                  "required": true,
                  "description": "The type of meeting for which to generate a description"
                }
              ],
              "responses": {
                "200": {
                    "description": "Generated meeting description",
                    "schema": {
                      "type": "object",
                      "properties": {
                        "answer": {
                          "type": "string",
                          "description": "The generated meeting description"
                        }
                      }
                    }
                  },
                "401": {
                  "description": "Unauthorized access",
                  "schema": {
                    "$ref": "#/definitions/ErrorResponse"
                  }
                },
                "default": {
                  "description": "Error response",
                  "schema": {
                    "$ref": "#/definitions/ErrorResponse"
                  }
                }
              }
            }
          }
        
    },
    "definitions": {
        "ErrorResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        }
    }
}